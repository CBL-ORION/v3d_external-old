CLASS QWidget SWCEditorWidget

D QRadioButton add_edge_mode_button "add edge"
D QRadioButton remove_edge_mode_button "remove edge"
D QRadioButton add_vertex_mode_button "add vertex"
D QRadioButton remove_vertex_mode_button "remove vertex"
D QRadioButton disable_mode_button "disable"
D QGridLayout grid_layout
L 0 0 add_edge_mode_button
L 0 1 remove_edge_mode_button
L 1 0 add_vertex_mode_button
L 1 1 remove_vertex_mode_button
L 2 0 disable_mode_button
D QGroupBox  set_mode_box "set mode :" | setLayout(grid_layout)

D QPushButton    clear_swc_button "clear swc"

D QVBoxLayout vbox
L set_mode_box 1
L clear_swc_button
R disable_mode_button | setChecked(true)
R this | setLayout(vbox)

C this add_edge_mode_button this onEditorModeChanged()
C this remove_edge_mode_button this onEditorModeChanged()
C this add_vertex_mode_button this onEditorModeChanged()
C this remove_vertex_mode_button this onEditorModeChanged()
C this disable_eidtor_mode_button this onEditorModeChanged()

C this clear_swc_button this onClearSWC()
=====================================
CLASS QWidget CreateNetworkWidget

D QLabel         nrows_label   "rows :"
D QSpinBox      nrows_spin  | setValue(5)

D QLabel         ncols_label   "cols :"
D QSpinBox      ncols_spin  | setValue(3)

D QLabel         nlayers_label "layers :"
D QSpinBox      nlayers_spin | setValue(1)

D QPushButton    clear_swc_button "clear swc"
D QPushButton    create_network_button "create network"

D QGridLayout grid_layout
L 0 0 nrows_label
L 0 1 nrows_spin
L 1 0 ncols_label
L 1 1 ncols_spin
L 2 0 nlayers_label
L 2 1 nlayers_spin
L 3 0 create_network_button 1 2
L 4 0 clear_swc_button 1 2
D QGroupBox group_box | setLayout(grid_layout)

D QVBoxLayout vbox
L group_box

R this | setLayout(vbox)

C nrows_spin valueChanged() this update()
C ncols_spin valueChanged() this update()
C nlayers_spin valueChanged() this update()

C create_network_button clicked() this onCreateNetwork()
C clear_swc_button clicked() this onClearSWC()

U int nrows | nrows_spin->text().toInt()
U int ncols | ncols_spin->text().toInt()
U int nlayers | nlayers_spin->text().toInt()
